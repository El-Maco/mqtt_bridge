<launch>
  <arg name="use_tls" default="false" />
  <node name="mir_trigger_client" pkg="mqtt_bridge" type="mir_trigger_client.py" output="screen">
  </node>
  <node name="mir_trigger_server" pkg="mqtt_bridge" type="mir_trigger_server.py" output="screen">
  </node>
  <node name="mqtt_bridge" pkg="mqtt_bridge" type="mqtt_bridge_node.py" output="screen">
    <rosparam command="load" file="$(find mqtt_bridge)/config/params.yaml" />
    <rosparam if="$(arg use_tls)" command="load" ns="mqtt" file="$(find mqtt_bridge)/config/tls_params.yaml" />
  </node>
</launch>
